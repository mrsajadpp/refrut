            align-items: center;
            text-align: left;
        }

        .hero-content {
            max-width: 100%;
            padding: 1rem 0;
        }

        .hero-content h1 {
            font-size: 2rem;
        }

        .hero-content p {
            font-size: 1rem;
        }

        .ul li {
            font-size: 1rem;
        }

        .hero-buttons {
            flex-direction: column;
        }

        .primary-btn,
        .secondary-btn {
            width: 100%;
            padding: 0.8rem 1rem;
        }

        .hero-image {
            max-width: 80%;
            padding: 1rem 0;
        }
    }

    @media (max-width: 480px) {
        .hero-content h1 {
            font-size: 1.8rem;
        }

        .hero-content p {
            font-size: 0.9rem;
        }

        .ul li {
            font-size: 0.9rem;
        }
    }
