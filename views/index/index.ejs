<%- include('../partials/static_header') %>
<style>
    .container {
        display: flex;
        flex-wrap: wrap;
        /* Ensure content wraps on smaller screens */
        justify-content: space-between;
        align-items: center;
        padding: 2rem;
        max-width: 1200px;
        margin: 0 auto;
        box-sizing: border-box;
        margin-top: 60px;
    }

    .hero-content {
        flex: 1;
        max-width: 50%;
        padding: 1rem;
    }

    .hero-content h1 {
        font-size: 2.5rem;
        font-weight: 700;
        line-height: 1.2;
        margin-bottom: 1rem;
        color: #1a202c;
        font-family: "Ahrefs";
        /* Dark gray */
    }

    .hero-content p {
        font-size: 1.1rem;
        line-height: 1.6;
        color: #4a5568;
        /* Medium gray */
        margin-bottom: 2rem;
    }

    .hero-buttons {
        display: flex;
        gap: 1rem;
    }

    .primary-btn,
    .secondary-btn {
        width: 200px;
        padding: 0.8rem 1.5rem;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        border: none;
        border-radius: 80px;
    }

    .primary-btn {
        background-color: #000;
        /* Brand color */
        color: #ffffff;
    }

    .primary-btn a {
        text-decoration: none;
        color: #ffffff;
    }

    .secondary-btn {
        background-color: transparent;
        color: #000;
        border: 1px solid #000;
    }

    .secondary-btn a {
        text-decoration: none;
        color: #000;
    }

    .hero-image {
        flex: 1;
        max-width: 50%;
        padding: 1rem;
        display: flex;
        justify-content: center;
    }

    .hero-image img {
        max-width: 100%;
        height: auto;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        .container {
            flex-direction: column;
            align-items: center;
            text-align: center;
        }

        .hero-content {
            max-width: 100%;
            padding: 1rem 0;
        }

        .hero-content h1 {
            font-size: 2rem;
        }

        .hero-content p {
            font-size: 1rem;
        }

        .hero-buttons {
            flex-direction: column;
        }

        .primary-btn,
        .secondary-btn {
            width: 100%;
            padding: 0.8rem 1rem;
        }

        .hero-image {
            max-width: 80%;
            padding: 1rem 0;
        }
    }

    @media (max-width: 480px) {
        .hero-content h1 {
            font-size: 1.8rem;
        }

        .hero-content p {
            font-size: 0.9rem;
        }
    }
</style>
<div class="container">
    <div class="hero-content">
        <h1>Join the Refrut Community</h1>
        <p>Connect with innovators, collaborate on projects, and accelerate your startup journey with Refrut.</p>
        <div class="hero-buttons">
            <button onclick="location.href = '/app/';" class="primary-btn">
                Get Started
            </button>
            <button onclick="location.href = '/#features';" class="secondary-btn">
                Learn More
            </button>
        </div>
    </div>
    <div class="hero-image">
        <img src="/img/free-community-illustration-down.png" alt="Finance Illustration">
    </div>
</div>

<%- include('../partials/static_footer') %>