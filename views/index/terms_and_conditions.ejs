    <style>
        .container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            align-items: center;
            padding: 2rem;
            max-width: 1200px;
            margin: 0 auto;
            box-sizing: border-box;
            margin-top: 60px;
        }

        .hero-content {
            flex: 1;
            max-width: 50%;
            padding: 1rem;
        }

        .hero-content h1 {
            font-size: 2.5rem;
            font-weight: 700;
            line-height: 1.2;
            color: #1a202c;
            font-family: "Ahrefs";
        }

        .hero-content h2 {
            margin-top: 15px;
        }

        .hero-content p {
            font-size: 1.1rem;
            line-height: 1.6;
            color: #4a5568;
            margin-top: 10px;
        }

        .hero-buttons {
            display: flex;
            gap: 1rem;
        }

        .primary-btn,
        .secondary-btn {
            width: 200px;
            padding: 0.8rem 1.5rem;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            border: none;
            border-radius: 80px;
        }

        .primary-btn {
            background-color: #000;
            color: #ffffff;
        }

        .primary-btn a {
            text-decoration: none;
            color: #ffffff;
        }

        .secondary-btn {
            background-color: transparent;
            color: #000;
            border: 1px solid #000;
        }

        .secondary-btn a {
            text-decoration: none;
            color: #000;
        }

        .hero-image {
            flex: 1;
            max-width: 50%;
            padding: 1rem;
            display: flex;
            justify-content: center;
        }

        .hero-image img {
            max-width: 100%;
            height: auto;
        }

        .ul {
            list-style-type: disc;
            padding-left: 1.5rem;
        }

        .ul li {
            font-size: 1rem;
            color: #4a5568;
            margin-top: 10px;
            line-height: 1.6;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .container {
                flex-direction: column;
                align-items: center;
                text-align: left;
            }

            .hero-content {
                max-width: 100%;
                padding: 1rem 0;
            }

            .hero-content h1 {
                font-size: 2rem;
            }

            .hero-content p {
                font-size: 1rem;
            }

            .ul li {
                font-size: 1rem;
            }

            .hero-buttons {
                flex-direction: column;
            }

            .primary-btn,
            .secondary-btn {
                width: 100%;
                padding: 0.8rem 1rem;
            }

            .hero-image {
                max-width: 80%;
                padding: 1rem 0;
            }
        }

        @media (max-width: 480px) {
            .hero-content h1 {
                font-size: 1.8rem;
            }

            .hero-content p {
                font-size: 0.9rem;
            }

            .ul li {
                font-size: 0.9rem;
            }
        }
    </style>

