    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>


    <script>
        let button = document.querySelector(".click_button");

        const loadButton = () => {
            button.classList.add('button__loading');
        }
    </script>
    <script>
        // document.addEventListener('DOMContentLoaded', function () {
