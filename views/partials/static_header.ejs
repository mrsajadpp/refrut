<style>
    .header-container {
        width: 100vw;
        height: 60px;
        display: flex;
        flex-direction: row;
        align-items: center;
        overflow: hidden;
        border-bottom: 1px solid #ccc;
        background: #fff;
        z-index: 999;
        position: fixed;
        top: 0px;
    }

    /* Desktop Header */

    .header-desktop .header-left {
        width: 260px;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: start;
        padding-left: 100px;
    }

    .header-desktop .header-left a {
        display: flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
    }

    .header-desktop .header-left a img {
        width: 120px;
    }

    .header-desktop .header-right {
        width: 260px;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: end;
        padding-right: 100px;
    }

    .header-desktop .header-center {
        width: calc(100% - 520px);
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: end;
        padding-right: 100px;
    }

    .header-desktop .header-center nav {
        width: 70%;
        height: 100%;
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: center;
    }

    .header-desktop .header-center nav a {
        position: relative;
        text-decoration: none;
        color: #000;
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100%;
    }

    .header-desktop .header-center nav a::after {
        content: "";
        position: absolute;
        bottom: 0;
        left: 50%;
        width: 0;
        height: 2px;
        background-color: #000;
        transition: width 0.3s ease, left 0.3s ease;
    }

    .header-desktop .header-center nav a:hover::after {
        width: 100%;
        left: 0;
    }

    .header-desktop .header-center nav a i {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .header-desktop .header-right a {
        width: 90px;
        height: 30px;
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: center;
        background: #000;
        color: #fff;
        text-decoration: none;
        border-radius: 10000px;
        border: 1px solid #fff;
        transition: background 0.3s ease-in-out;
        transition: border 0.3s ease-in-out;
    }

    .header-desktop .header-right a {
        position: relative;
        overflow: hidden;
        color: #fff;
        background: #000;
        border: 1px solid #000;
        transition: color 0.3s ease, border-color 0.3s ease;
        z-index: 1;
    }

    .header-desktop .header-right a::before {
        content: "";
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: #fff;
        transition: left 0.4s ease;
        z-index: -1;
    }

    .header-desktop .header-right a:hover::before {
        left: 0;
    }

    .header-desktop .header-right a:hover {
        color: #000;
    }

    /* Mobile Header */

    .header-mobile .header-left {
        width: 170px;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: start;
        padding-left: 20px;
    }

    .header-mobile .header-left a {
        text-decoration: none;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .header-mobile .header-left a img {
        width: 120px;
    }

    .header-mobile .header-right {
        width: calc(100% - 170px);
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: end;
        padding-right: 20px;
    }

    .header-mobile .header-right button {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: center;
        border: none;
        background: transparent;
    }


    .nav-drawer {
        position: fixed;
        top: 0;
        right: 0;
        height: 100vh;
        width: 250px;
        background-color: #fff;
        border-left: 1px solid #ccc;
        transform: translateX(100%);
        /* Initially hidden */
        transition: transform 0.3s ease-in-out;
        display: flex;
        flex-direction: column;
        padding: 20px;
        z-index: 1000;
    }

    .nav-drawer.open {
        transform: translateX(0);
        /* Slide in when open */
    }

    .nav-drawer a {
        text-decoration: none;
        color: #000;
        padding: 15px 0;
        font-size: 18px;
        display: block;
        border-bottom: 1px solid #ccc;
    }

    .nav-drawer-close {
        display: flex;
        justify-content: flex-end;
        cursor: pointer;
        font-size: 24px;
        margin-bottom: 20px;
        color: #000;
    }


    @media only screen and (min-width: 1024px) {
        .header-desktop {
            display: flex;
        }

        .header-mobile {
            display: none;
        }
    }

    @media only screen and (max-width: 1024px) {
        .header-desktop {
            display: none;
        }

        .header-mobile {
            display: flex;
        }
    }
</style>

