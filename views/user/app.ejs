<%- include('../partials/static_header') %>
    <style>
        .dashboard-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem;
            display: flex;
            flex-direction: column;
            gap: 2rem;
            margin-top: 60px;
            box-sizing: border-box;
        }

        .profile-section {
            display: flex;
            align-items: center;
            gap: 1.5rem;
        }

        .profile-picture {
            flex-shrink: 0;
            /* Prevent shrinking */
            flex-grow: 0;
            /* Prevent growing */
            width: 100px;
            height: 100px;
            border-radius: 50%;
            background-color: #ddd;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 1.5rem;
            color: #555;
            overflow: hidden;
        }

        .profile-picture img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .account-info {
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
        }

        .account-info h2 {
            font-size: 1.2rem;
            margin: 0;
            color: #1a202c;
        }

        .account-info p {
            margin: 0;
            font-size: 1rem;
            color: #4a5568;
        }

        .tabs {
            display: flex;
            gap: 1rem;
            border-bottom: 2px solid #ddd;
            padding-bottom: 0.5rem;
            overflow-x: auto;
            /* Enables horizontal scrolling */
            white-space: nowrap;
            /* Prevents tabs from wrapping to the next line */
        }

        .tab {
            cursor: pointer;
            font-size: 1rem;
            color: #555;
            padding: 0.5rem 1rem;
            border-radius: 5px;
            display: inline-block;
            /* Ensures that tabs stay in one line */
        }

        .tab.active {
            color: #000;
            border-bottom: 2px solid #000;
        }

        .tab-content {
            margin-top: 1rem;
        }

        .grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(130px, 1fr));
            gap: 1rem;
            justify-content: center;
        }

        .grid-item {
            width: 130px;
            padding: 1rem;
            border: 1px solid #ddd;
            border-radius: 8px;
            text-align: center;
            box-sizing: border-box;
        }

        .grid-item img {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            margin-bottom: 0.5rem;
        }

        .referral-section {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .referral-link {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .referral-link input {
            flex: 1;
            padding: 0.5rem;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-size: 1rem;
        }

        .referral-link button {
            padding: 0.64rem 1rem;
            border: none;
            background-color: #000;
            color: #fff;
            border-radius: 5px;
            cursor: pointer;
        }

        .prevent-select {
            -webkit-user-select: none;
            /* Safari */
            -ms-user-select: none;
            /* IE 10 and IE 11 */
            user-select: none;
            /* Standard syntax */
        }


        .profile-picture {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            background-color: #ddd;
            position: relative;
            overflow: hidden;
            cursor: pointer;
        }

        .profile-picture img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .profile-picture:hover::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
        }

        .profile-picture:hover .pencil-icon {
            display: flex;
        }

        .pencil-icon {
            display: none;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: rgba(0, 0, 0, 0.5);
            border-radius: 50%;
            padding: 10px;
        }

        .pencil-icon svg {
            /* fill: white; */
            stroke: white;
            width: 24px;
            height: 24px;
        }

        .hidden-input {
            display: none;
        }
    </style>

    <div class="dashboard-container">
        <div class="profile-section">
            <form id="profile-form" action="/app/profile/update" method="POST" enctype="multipart/form-data">
                <div class="profile-picture" onclick="triggerFileInput()">
                    <img src="<%- user.profile_url %>" alt="Profile">
                    <div class="pencil-icon">
                        <svg width="24" height="24" fill="none" stroke="currentColor" stroke-width="1.5"
                            viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round"
                            xmlns="http://www.w3.org/2000/svg">
                            <path d='M6 9a2 2 0 1 0 4 0 2 2 0 0 0-4 0m14.927-.01c-6.61-.908-11.31 4-10.927 10.51' />
                            <path d='M3 13.066c2.78-.385 5.851 1.293 7.2 3.434' />
                            <path
                                d='M2.357 9.3c0-1.68 0-2.52.327-3.162a3 3 0 0 1 1.311-1.311C4.637 4.5 5.477 4.5 7.157 4.5h9.686c1.68 0 2.52 0 3.162.327a3 3 0 0 1 1.31 1.311c.328.642.328 1.482.328 3.162v5.4c0 1.68 0 2.52-.327 3.162a3 3 0 0 1-1.311 1.311c-.642.327-1.482.327-3.162.327H7.157c-1.68 0-2.52 0-3.162-.327a3 3 0 0 1-1.31-1.311c-.328-.642-.328-1.482-.328-3.162z' />
                        </svg>
                    </div>
                    <input type="file" id="file-input" name="profile_picture" class="hidden-input"
                        onchange="submitForm()">
                        <input type="text" id="user_name" placeholder="Full name" class="hidden-input" name="user_name"
                        value="<%= form_data ? form_data.user_name : user.user_name %>">
                    <input type="email" id="email" disabled placeholder="Email" class="hidden-input" name="email"
                        value="<%= form_data ? form_data.email : user.email %>">
                    <input id="dateInput" disabled placeholder="Date of birth" class="hidden-input" name="dob"
                        value="<%= form_data ? form_data.dob : user.dob %>">
                    <select id="position" class="hidden-input" name="position">
                        <option disabled selected>Position</option>
                        <option value="developer" <%=form_data && form_data.position==='developer' ? 'selected' :
                            (user.position==='developer' ? 'selected' : '' ) %>
                            >Developer</option>
                        <option value="student" <%=form_data && form_data.position==='student' ? 'selected' :
                            (user.position==='student' ? 'selected' : '' ) %>>Student
                        </option>
                        <option value="startup_founder" <%=form_data && form_data.position==='startup_founder'
                            ? 'selected' : (user.position==='startup_founder' ? 'selected' : '' ) %>>Startup
                            Founder</option>
                        <option value="other" <%=form_data && form_data.position==='other' ? 'selected' :
                            (user.position==='other' ? 'selected' : '' ) %>>Other</option>
                    </select>
                    <select id="sex" class="hidden-input" name="sex">
                        <option disabled selected>Gender</option>
                        <option value="male" <%=form_data && form_data.sex==='male' ? 'selected' :
                            (user.sex==='male' ? 'selected' : '' ) %>>Male</option>
                        <option value="female" <%=form_data && form_data.sex==='female' ? 'selected' :
                            (user.sex==='female' ? 'selected' : '' ) %>>Female</option>
                        <option value="other" <%=form_data && form_data.sex==='other' ? 'selected' :
                            (user.sex==='other' ? 'selected' : '' ) %>>Other</option>
                    </select>
                </div>
            </form>

            <div class="account-info">
                <h2><%- user.user_name %></h2>
                <p>Account Expiry: <strong><%- originalExpiryDate %></strong></p>
                <% if (reffer_user && reffer_user.user_name) { %>
                    <p>Referred By: <strong><a href="/user/<%- reffer_user._id %>" style="text-decoration: none; color: #4a5568;"><%- reffer_user.user_name %></a></strong></p>
                <% } %>
            </div>
        </div>

        <div class="tabs prevent-select">
            <div class="tab active" id="referrals-tab" onclick="location.href = '/app/'">Referrals</div>
            <div class="tab" id="referrals-tab" onclick="location.href = '/app/#referral-link'">Referral Link</div>
            <div class="tab" id="referrals-tab" onclick="location.href = '/app/profile/edit'">Edit Profile</div>
        </div>

        <div class="tab-content" id="referrals-content">
            <div class="referral-section">
                <% if (referrals.length === 0) { %>
                    <div class="no-referrals-container">
                        <p style="color: #4a5568;">You don't have any referrals yet!</p>
                    </div>
                <% } else { %>
                    <div class="grid">
                        <% referrals.forEach(referral => { %>
                            <div class="grid-item prevent-select" onclick="location.href = '/user/<%- referral._id %>'">
                                <img src="<%- referral.profile_url %>" alt="Profile">
                                <p><%- referral.user_name %></p>
                            </div>
                        <% }) %>
                    </div>
                <% } %>

                <br><br>
                <h3 style="font-size: 16px;" id="referral-link">Your Referral Link</h3>
                <div class="referral-link">
                    <input type="text" id="myInput"
                        value="https://refrut.grovixlab.com/auth/signup?reff_code=<%- user.reff_code %>" readonly>
                    <button id="copyButton">Copy</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        function triggerFileInput() {
            document.getElementById('file-input').click();
        }

        function submitForm() {
            const fileInput = document.getElementById('file-input');
            if (fileInput.files.length > 0) {
                document.getElementById('profile-form').submit();
            }
        }
    </script>

    <script>
        const copyButton = document.getElementById('copyButton');
        const inviteLink = document.getElementById('myInput');

        copyButton.addEventListener('click', () => {
            const link = inviteLink.value;
            navigator.clipboard.writeText(link).then(() => {
                alert('Invite link copied to clipboard!');
            }, (err) => {
                alert('Failed to copy the invite link');
            });
        });
    </script>

    <%- include('../partials/static_footer') %>