<%- include('../partials/static_header') %>
    <style>
        .dashboard-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem;
            display: flex;
            flex-direction: column;
            gap: 2rem;
            margin-top: 60px;
            box-sizing: border-box;
        }

        .profile-section {
            display: flex;
            align-items: center;
            gap: 1.5rem;
        }

        .profile-picture {
            flex-shrink: 0;
            /* Prevent shrinking */
            flex-grow: 0;
            /* Prevent growing */
            width: 100px;
            height: 100px;
            border-radius: 50%;
            background-color: #ddd;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 1.5rem;
            color: #555;
            overflow: hidden;
        }

        .profile-picture img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .account-info {
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
        }

        .account-info h2 {
            font-size: 1.2rem;
            margin: 0;
            color: #1a202c;
        }

        .account-info p {
            margin: 0;
            font-size: 1rem;
            color: #4a5568;
        }

        .tabs {
            display: flex;
            gap: 1rem;
            border-bottom: 2px solid #ddd;
            padding-bottom: 0.5rem;
            overflow-x: auto;
            /* Enables horizontal scrolling */
            white-space: nowrap;
            /* Prevents tabs from wrapping to the next line */
        }

        .tab {
            cursor: pointer;
            font-size: 1rem;
            color: #555;
            padding: 0.5rem 1rem;
            border-radius: 5px;
            display: inline-block;
            /* Ensures that tabs stay in one line */
        }

        .tab.active {
            color: #000;
            border-bottom: 2px solid #000;
        }

        .tab-content {
            margin-top: 1rem;
        }

        .grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(130px, 1fr));
            gap: 1rem;
            justify-content: center;
        }

        .grid-item {
            width: 130px;
            padding: 1rem;
            border: 1px solid #ddd;
            border-radius: 8px;
            text-align: center;
            box-sizing: border-box;
        }

        .grid-item img {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            margin-bottom: 0.5rem;
        }

        .referral-section {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .referral-link {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .referral-link input {
            flex: 1;
            padding: 0.5rem;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-size: 1rem;
        }

        .referral-link button {
            padding: 0.64rem 1rem;
            border: none;
            background-color: #000;
            color: #fff;
            border-radius: 5px;
            cursor: pointer;
        }

        .prevent-select {
            -webkit-user-select: none;
            /* Safari */
            -ms-user-select: none;
            /* IE 10 and IE 11 */
            user-select: none;
            /* Standard syntax */
        }


        .profile-picture {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            background-color: #ddd;
            position: relative;
            overflow: hidden;
            cursor: pointer;
        }

        .profile-picture img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        /* .profile-picture:hover::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
        } */

        .profile-picture:hover .pencil-icon {
            display: flex;
        }

        .pencil-icon {
            display: none;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: rgba(0, 0, 0, 0.5);
            border-radius: 50%;
            padding: 10px;
        }

        .pencil-icon svg {
            /* fill: white; */
            stroke: white;
            width: 24px;
            height: 24px;
        }

        .bio-section {
    margin-top: -10px;
    padding: 1rem;
    background-color: #f9f9f9;
    border: 1px solid #ddd;
    border-radius: 8px;
    color: #4a5568;
    font-size: 1rem;
    line-height: 1.5;
}

.bio-section h3 {
    font-size: 1.2rem;
    margin-bottom: 0.5rem;
    color: #1a202c;
}

.bio-section p {
    margin: 0;
    white-space: pre-wrap; /* Preserve line breaks in the bio */
}


        .hidden-input {
            display: none;
        }
    </style>

    <div class="dashboard-container">
        <div class="profile-section">
            <div class="profile-picture" onclick="location.href = '/app/profile/edit'">
                <img src="<%- user.profile_url %>" alt="Profile">
            </div>

            <div class="account-info">
                <h2><%- user.user_name %></h2>
                <p>Account Expiry: <strong><%- originalExpiryDate %></strong></p>
                <% if (reffer_user && reffer_user.user_name) { %>
                    <p>Referred By: <strong><a href="/user/<%- reffer_user._id %>" style="text-decoration: none; color: #4a5568;"><%- reffer_user.user_name %></a></strong></p>
                <% } %>
            </div>
        </div>
        <div class="bio-section">
            <p><%- user.bio %></p>
        </div>   

        <div class="tabs prevent-select">
            <div class="tab active" id="referrals-tab" onclick="location.href = '/app/'">Referrals</div>
            <div class="tab" id="referrals-tab" onclick="location.href = '/app/#referral-link'">Referral Link</div>
            <div class="tab" id="referrals-tab" onclick="location.href = '/app/profile/edit'">Edit Profile</div>
        </div>

        <div class="tab-content" id="referrals-content">
            <div class="referral-section">
                <% if (referrals.length === 0) { %>
                    <div class="no-referrals-container">
                        <p style="color: #4a5568;">You don't have any referrals yet!</p>
                    </div>
                <% } else { %>
                    <div class="grid">
                        <% referrals.forEach(referral => { %>
                            <div class="grid-item prevent-select" onclick="location.href = '/user/<%- referral._id %>'">
                                <img src="<%- referral.profile_url %>" alt="Profile">
                                <p><%- referral.user_name %></p>
                            </div>
                        <% }) %>
                    </div>
                <% } %>

                <br><br>
                <h3 style="font-size: 16px;" id="referral-link">Your Referral Link</h3>
                <div class="referral-link">
                    <input type="text" id="myInput"
                        value="https://refrut.grovixlab.com/auth/signup?reff_code=<%- user.reff_code %>" readonly>
                    <button id="copyButton">Copy</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        function triggerFileInput() {
            document.getElementById('file-input').click();
        }

        function submitForm() {
            const fileInput = document.getElementById('file-input');
            if (fileInput.files.length > 0) {
                document.getElementById('profile-form').submit();
            }
        }
    </script>

    <script>
        const copyButton = document.getElementById('copyButton');
        const inviteLink = document.getElementById('myInput');

        copyButton.addEventListener('click', () => {
            const link = inviteLink.value;
            navigator.clipboard.writeText(link).then(() => {
                alert('Invite link copied to clipboard!');
            }, (err) => {
                alert('Failed to copy the invite link');
            });
        });
    </script>

    <%- include('../partials/static_footer') %>