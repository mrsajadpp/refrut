<%- include('../partials/static_header') %>
<style>
    .container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        align-items: center;
        padding: 2rem;
        max-width: 1200px;
        margin: 0 auto;
        box-sizing: border-box;
        margin-top: 60px;
    }

    .hero-content {
        flex: 1;
        max-width: 50%;
        padding: 1rem;
    }

    .hero-content h1 {
        font-size: 2.5rem;
        font-weight: 700;
        line-height: 1.2;
        color: #1a202c;
        font-family: "Ahrefs";
    }

    .hero-content p {
        font-size: 1.1rem;
        line-height: 1.6;
        color: #4a5568;
        margin-top: 10px;
    }

    .hero-buttons {
        display: flex;
        gap: 1rem;
    }

    .primary-btn,
    .secondary-btn {
        width: 200px;
        padding: 0.8rem 1.5rem;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        border: none;
        border-radius: 80px;
    }

    .primary-btn {
        background-color: #000;
        color: #ffffff;
    }

    .primary-btn a {
        text-decoration: none;
        color: #ffffff;
    }

    .secondary-btn {
        background-color: transparent;
        color: #000;
        border: 1px solid #000;
    }

    .secondary-btn a {
        text-decoration: none;
        color: #000;
    }

    .hero-image {
        flex: 1;
        max-width: 50%;
        padding: 1rem;
        display: flex;
        justify-content: center;
    }

    .hero-image img {
        max-width: 100%;
        height: auto;
    }

    .ul {
        list-style-type: disc;
        padding-left: 1.5rem;
    }

    .ul li {
        font-size: 1rem;
        color: #4a5568;
        margin-top: 10px;
        line-height: 1.6;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        .container {
            flex-direction: column;
            align-items: center;
            text-align: left;
        }

        .hero-content {
            max-width: 100%;
            padding: 1rem 0;
        }

        .hero-content h1 {
            font-size: 2rem;
        }

        .hero-content p {
            font-size: 1rem;
        }

        .ul li {
            font-size: 1rem;
        }

        .hero-buttons {
            flex-direction: column;
        }

        .primary-btn,
        .secondary-btn {
            width: 100%;
            padding: 0.8rem 1rem;
        }

        .hero-image {
            max-width: 80%;
            padding: 1rem 0;
        }
    }

    @media (max-width: 480px) {
        .hero-content h1 {
            font-size: 1.8rem;
        }

        .hero-content p {
            font-size: 0.9rem;
        }

        .ul li {
            font-size: 0.9rem;
        }
    }

    .invite-link {
        font-size: 1.1rem;
        color: green;
        text-decoration: none;
        font-weight: bold;
    }

    .button {
        padding: 10px 20px;
        background-color: #0078e8;
        color: white;
        border: none;
        border-radius: 80px;
        cursor: pointer;
        font-size: 16px;
        margin-top: 10px;
        margin-bottom: 20px;
    }

    .button:hover {
        background-color: #005bb5;
    }
</style>

<div class="container">
    <div class="hero-content">
        <h1>Invite Your Community</h1>
        <p>Share this invitation link with your friends and community members. By inviting others, you extend your account expiry by one month!</p>

        <h2>Invite Link</h2>
        <p>Use this link to invite others:</p>
        <p><a href="https://refrut.grovixlab.com/auth/signup?reff_code=<%- req.session.user.reff_code -%>" class="invite-link" id="inviteLink">https://refrut.grovixlab.com/auth/signup?reff_code=<%- req.session.user.reff_code -%></a></p>

        <button id="copyButton" class="button">Copy Invite Link</button>

        <h2>Account Expiry</h2>
        <p>Your current account expiry date is: <strong><%- originalExpiryDate %></strong></p>
        <p>By sharing the invitation, your expiry date has been extended by one month! New expiry date: <strong><%- updatedExpiryDate %></strong></p>
    </div>
</div>

<script>
    const copyButton = document.getElementById('copyButton');
    const inviteLink = document.getElementById('inviteLink');

    copyButton.addEventListener('click', () => {
        const link = inviteLink.href;
        navigator.clipboard.writeText(link).then(() => {
            alert('Invite link copied to clipboard!');
        }, (err) => {
            alert('Failed to copy the invite link');
        });
    });
</script>

<%- include('../partials/static_footer') %>
